<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorWhite</item>

        <!-- Define custom button text appearance style -->
        <item name="buttonStyle">@style/AppButtonStyle</item>
    </style>

    <!-- Custom button text appearance style -->
    <style name="AppButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/AppButtonTextAppearance</item>
    </style>

    <!-- Custom button text appearance -->
    <style name="AppButtonTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <!-- Add more attributes as needed -->
    </style>

    <!-- Theme for OnBoardingActivity (applying some transition) -->
    <style name="AppTheme.OnBoarding">
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowExitTransition">@transition/activity_main_exit</item>
        <item name="android:windowReenterTransition">@transition/activity_main_reenter</item>
    </style>

    <!-- Styling TextInputLayout colors -->
    <style name="EditText.Login" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorGrey</item>
        <item name="colorControlActivated">@color/colorGrey</item>
    </style>

    <!-- Splash theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/your_logo</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="AppButtonTextStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/colorPurple</item>
    </style>

</resources>
